{
	"compilerOptions": {
		"target": "ESNext",
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"module": "CommonJS",
		"declaration": true,
		"declarationDir": "./dist",
		"outDir": "./dist",
		"lib": ["ESNext"],
		"jsx": "react-jsx"
	},
	"include": ["src"]
}
